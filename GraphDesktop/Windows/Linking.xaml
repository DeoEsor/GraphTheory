<Window x:Class="GraphDesktop.Windows.Linking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GraphDesktop.Windows"
        mc:Ignorable="d"
        Title="Linking" Height="450" Width="800">
    <UniformGrid>
        <CheckBox x:Name="linq" HorizontalAlignment="Center" Content="Связный"/>
        <CheckBox x:Name="weak" HorizontalAlignment="Center" Content="Слабо-связный"/>
        <CheckBox x:Name="Strong" HorizontalAlignment="Center" Content="Сильно-связный"/>
        <TextBlock Text="Количество компонент"/>
        <TextBlock Text="0" x:Name="Count"/>
        <ListView x:Name="View"/>
    </UniformGrid>
</Window>
