<Window x:Class="GraphDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:usercontols="clr-namespace:GraphDesktop.UserContols" xmlns:System="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        
        Background="Black"
        Title="Теория графов" Height="350" Width="600">
    <Grid>
        <Menu>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem  Header="Файл">
                <MenuItem Header="Импорт" />
                <MenuItem Header="Сохранить как" />
                <MenuItem Header="Об авторах" />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Задачи теории графов">
                <MenuItem />
            </MenuItem>
            <MenuItem Header="Задания"  Click="Tasks"/>
            <MenuItem HorizontalAlignment="Right" Header="О программе"  Click="Tasks"/>
        </Menu>
        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Column="0" 
                        Grid.Row="0" 
                        Width="100">
                        <Image Source="/Resources/cursor-game-01.jpg"/>
                </Button>
                <Button 
                        Grid.Row="1" Grid.Column="0"
                        Width="Auto">
                    <Image Source="/Resources/vertex.jpg"/>
                </Button>
                <Button 
                        Grid.Row="2" Grid.Column="0"
                        Width="Auto">
                    <Image Source="/Resources/edge.jpg"/>
                </Button>
                <Button 
                        Grid.Row="3" Grid.Column="0"
                        Width="Auto">
                    <Image Source="/Resources/deleteAll.jpg"/>
                </Button>
                <!--- Canvas -->
                <Grid 
                        Margin="10"
                        Grid.Row="0" Grid.RowSpan="4" Height="Auto" Width="350" 
                        Background="Black" Grid.Column="1" >
                    <usercontols:Vertex>
                        <usercontols:Vertex.NameVertex>
                            <system:String> ya huynya</system:String>
                        </usercontols:Vertex.NameVertex>
                    </usercontols:Vertex>
                </Grid>
                <Menu
                        Padding="25,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="100"
                        Grid.Row="0"  
                        Grid.Column="2" Grid.ColumnSpan="2">
                        <MenuItem Header="Вид" >
                            <MenuItem.Icon>
                                <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>    
                            </MenuItem.Icon>
                            <RadioButton  Content="Ориентированный"/>
                            <RadioButton  Content="Мультиграф"/>
                        </MenuItem>
                </Menu>
                <ListBox
                        Width="Auto" Height="Auto" Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Grid.Row="1" Grid.RowSpan="2"/>
                <Button
                        Width="50" 
                        Padding="0, 0, 0, 0" 
                        Height="50" 
                        Grid.Column="2" Grid.Row="3"/>
                <Button 
                        Width="50" 
                        Padding="0, 0, 0, 0" 
                        Height="50"
                        Grid.Column="3" Grid.Row="3"/>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
