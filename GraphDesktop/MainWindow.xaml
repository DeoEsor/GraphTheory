<Window x:Class="GraphDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:usercontols="clr-namespace:GraphDesktop.UserContols" xmlns:System="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Icon="/Resources/emblema_mai.ico"
        Background="Black"
        Title="Теория графов" Height="350" Width="600">
    <Grid>
        <Menu>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem  Header="Файл">
                <MenuItem Header="Импорт" />
                <MenuItem Header="Сохранить как" />
                <MenuItem Header="Об авторах" />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Задачи теории графов">
                <MenuItem />
            </MenuItem>
            <MenuItem Header="Задания"  Click="Tasks"/>
            <MenuItem HorizontalAlignment="Right" Header="О программе"  Click="Tasks"/>
        </Menu>
        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.ColumnSpan="1" RowSpan="4" Height="Auto"
                      Width="300" Background="Azure">
                    <usercontols:Vertex NameVertex="Aboba">
                        
                    </usercontols:Vertex>
                </Grid>
                <!--- Canvas -->
                <!--
                <usercontols:GraphCanvas 
                    BorderBrush="Azure"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderThickness="5"
                    Height="Auto" Width="Auto" Background="Cornsilk" Grid.RowSpan="4">
                    
                </usercontols:GraphCanvas>!-->
                <Menu
                        Padding="25,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="100"
                        Grid.Row="0"  
                        Grid.Column="1" >
                        <MenuItem Header="Вид" >
                            <MenuItem.Icon>
                                <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>    
                            </MenuItem.Icon>
                            <RadioButton  Content="Ориентированный"/>
                            <RadioButton  Content="Мультиграф"/>
                        </MenuItem>
                </Menu>
                <ListBox
                    HorizontalAlignment="Center"
                        Width="150" Height="300" Grid.Column="1"
                        Grid.Row="1" Grid.RowSpan="2"/>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
